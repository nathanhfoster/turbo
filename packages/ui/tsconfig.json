{
  "extends": "@nathanhfoster/typescript-config/react-library.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/common/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/types": ["./src/types"],
      "@/constants": ["./src/constants"],
      "@/@constants": ["./src/constants"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
