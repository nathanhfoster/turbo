{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "VAPID_PRIVATE_KEY",
        "VAPID_EMAIL",
        "NEXT_PUBLIC_VAPID_PUBLIC_KEY",
        "APPS_RESUME_URL",
        "APPS_MAIN_URL",
        "APPS_ASTRAL_POET_URL"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**", "test-results/**", "playwright-report/**"]
    },
    "test:unit": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "outputs": ["test-results/**", "playwright-report/**"],
      "cache": false,
      "env": ["PLAYWRIGHT_TEST_BASE_URL"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
