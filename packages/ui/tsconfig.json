{
  "extends": "@nathanhfoster/typescript-config/react-library.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "noImplicitReturns": false,
    "strict": false,
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/common/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/types": ["./src/types"],
      "@/constants": ["./src/constants"],
      "@/@constants": ["./src/constants"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.stories.tsx", "**/*.test.tsx"]
}
