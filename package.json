{
  "name": "nathanhfoster",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean && rimraf node_modules .next dist",
    "clean:all": "rimraf apps/*/node_modules apps/*/.next apps/*/dist packages/*/node_modules packages/*/.next packages/*/dist node_modules .next dist",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test:unit && pnpm test:e2e",
    "test:unit": "turbo run test:unit",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:install": "playwright install --with-deps chromium",
    "ci": "turbo run ci",
    "validate": "turbo run lint check-types && pnpm test:e2e"
  },
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "next": "^16.1.1",
    "postcss": "^8.5.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@nathanhfoster/eslint-config": "workspace:*",
    "@nathanhfoster/typescript-config": "workspace:*",
    "@playwright/test": "^1.48.0",
    "@types/node": "22.10.5",
    "@types/react": "19.2.3",
    "@types/react-dom": "19.2.3",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.27.2",
    "eslint": "^9.34.0",
    "eslint-config-next": "16.1.1",
    "next": "^16.1.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "tailwindcss": "^4.1.13",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.2.3",
      "@types/react-dom": "19.2.3"
    }
  }
}
